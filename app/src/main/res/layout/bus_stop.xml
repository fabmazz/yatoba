				android:layout_alignParentEnd="true" android:layout_alignBottom="@+id/stop_nameText"
				android:layout_alignTop="@+id/stop_nameText" android:gravity="center"
				android:nestedScrollingEnabled="true" android:textColor="@color/Indigo_900"/>
		<TextView
