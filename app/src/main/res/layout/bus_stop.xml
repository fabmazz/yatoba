				android:layout_height="wrap_content"
				android:text="@string/lines_showing"
				android:id="@+id/textView2"
				android:layout_alignBottom="@+id/stop_numberText" android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true" android:layout_alignTop="@+id/stop_numberText"
				android:layout_alignLeft="@+id/stop_linesText" android:layout_alignStart="@+id/stop_linesText"
				android:phoneNumber="false" android:gravity="center"/>

